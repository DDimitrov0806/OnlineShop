
@model Shop.ViewModels.CartViewModel
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<div class="container">
    <div class="row justify-content-between">
        <table>

            @foreach (var product in Model.Cart)
            {
                <tr>
                    <td>@product.Name       </td>
                    <td>@product.Price</td>

                </tr>

            }

            <tr>
                <td>Overal price: @Model.OverallPrice</td>

            </tr>


        </table>
        <form asp-action="Clear">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Clear"/>
            </div>
        </form>
    </div>

</div>
